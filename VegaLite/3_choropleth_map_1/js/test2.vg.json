{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Airports in Victoria and New South Wales",
    "width": 900,
    "height": 500,
    "params": [
      {
        "name": "State_selection",
        "value": "AU-VIC",
        "bind": {
          "input": "select",
          "options": ["AU-VIC", "AU-NSW"],
          "labels": ["Victoria", "New South Wales"],
          "name": "Select a State: "
        }
      },
      {
        "name": "zoom_level",
        "expr": "State_selection === 'AU-VIC' ? 7000 : 5000",
        "bind": {
          "input": "range",
          "min": 3000,
          "max": 10000,
          "step": 500,
          "name": "Zoom Level: "
        }
      },
      {
        "name": "center_to",
        "expr": "State_selection === 'AU-VIC' ? [145, -37.95] : [150.0, -32.5]",
        "bind": {
          "input": "select",
          "options": [
            [145, -37.95],  
            [150.0, -32.5]  
          ],
          "labels": ["Victoria", "New South Wales"],
          "name": "Map Center: "
        }
      }
    ],
    "projection": {
      "type": "mercator",
      "center": {"expr": "center_to"},  
      "scale": {"expr": "zoom_level"}
    },
    "layer": [
      {
        "transform": [
          {
            "filter": "State_selection === 'AU-VIC'"
          }
        ],
        "data": {
          "url": "https://raw.githubusercontent.com/scha0241/FIT3179/main/VegaLite/3_choropleth_map_1/js/victoria.topojson",
          "format": {"type": "topojson", "feature": "victoria"}
        },
        "mark": {"type": "geoshape", "fill": "lightgreen", "stroke": "white"},
        "encoding": {
          "tooltip": {"field": "properties.name", "type": "nominal", "title": "Victoria Region"}
        }
      },
      {
        "transform": [
          {
            "filter": "State_selection === 'AU-NSW'"
          }
        ],
        "data": {
          "url": "https://raw.githubusercontent.com/scha0241/FIT3179/main/VegaLite/3_choropleth_map_1/js/nsw.topojson",
          "format": {"type": "topojson", "feature": "new_south_wales"}
        },
        "mark": {"type": "geoshape", "fill": "lightblue", "stroke": "white"},
        "encoding": {
          "tooltip": {"field": "properties.name", "type": "nominal", "title": "New South Wales Region"}
        }
      },
      {
        "data": {
          "url": "https://raw.githubusercontent.com/scha0241/FIT3179/main/VegaLite/3_choropleth_map_1/data/filter.csv",
          "format": {"type": "csv"}
        },
        "transform": [
          {
            "filter": "datum.iso_region === State_selection"
          }
        ],
        "mark": "circle",
        "encoding": {
          "longitude": {"field": "longitude_deg", "type": "quantitative"},
          "latitude": {"field": "latitude_deg", "type": "quantitative"},
          "size": {
            "field": "score",
            "type": "quantitative",
            "scale": {
              "type": "log",
              "domain": [1, 1027975],
              "range": [10, 200]
            },
            "legend": {
              "title": "Airport Score",
              "orient": "right",
              "labelFontSize": 12
            }
          },
          "color": {"value": "blue"},
          "tooltip": [
            {"field": "name", "type": "nominal", "title": "Airport Name"},
            {"field": "municipality", "type": "nominal", "title": "City"},
            {"field": "iata_code", "type": "nominal", "title": "IATA Code"},
            {"field": "score", "type": "quantitative", "title": "Score"}
          ]
        }
      }
    ]
  }
  