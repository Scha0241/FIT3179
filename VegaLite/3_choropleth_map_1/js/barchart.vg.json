{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Top 10 City-to-City Routes by Passenger Volume",
    "width": 800,
    "height": 400,
    "data": {
      "url": "https://raw.githubusercontent.com/scha0241/FIT3179/main/VegaLite/3_choropleth_map_1/data/routes.csv",  
      "format": {"type": "csv"}
    },
    "transform": [
      {
        "aggregate": [{"op": "sum", "field": "Passenger_Trips", "as": "Total_Passengers"}],
        "groupby": ["City1", "City2"]
      },
      {
        "window": [{"op": "rank", "as": "rank"}],
        "sort": [{"field": "Total_Passengers", "order": "descending"}]
      },
      {
        "filter": "datum.rank <= 10"  
      }
    ],
    "mark": "bar",
    "encoding": {
      "x": {
        "field": "City1",
        "type": "nominal",
        "axis": {"title": "Route (City1 to City2)", "labelAngle": -45},
        "sort": {"field": "Total_Passengers", "order": "descending"}
      },
      "y": {
        "field": "Total_Passengers",
        "type": "quantitative",
        "axis": {"title": "Total Passenger Volume"}
      },
      "tooltip": [
        {"field": "City1", "type": "nominal", "title": "From"},
        {"field": "City2", "type": "nominal", "title": "To"},
        {"field": "Total_Passengers", "type": "quantitative", "title": "Passengers"}
      ]
    }
  }
  