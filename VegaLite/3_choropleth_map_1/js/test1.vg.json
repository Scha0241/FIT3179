{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Flight Routes Between Airports",
  "width": 900,
  "height": 600,
  "projection": {
    "type": "mercator",
    "scale": 1300,
    "center": [134.5, -27]
  },
  "layer": [
    {
      "mark": {
        "type": "geoshape",
        "fill": "lightgray",
        "stroke": "white"
      },
      "data": {
        "url": "https://raw.githubusercontent.com/scha0241/FIT3179/main/VegaLite/3_choropleth_map_1/js/ne_50m_admin_1_states_provinces.topojson",
        "format": {
          "type": "topojson",
          "feature": "ne_50m_admin_1_states_provinces"
        }
      },
      "encoding": {
        "tooltip": {"field": "properties.name", "type": "nominal", "title": "State"}
      }
    },
    {
      "mark": {"type": "rule", "color": "red", "opacity": 0.35},
      "data": {
        "url": "https://raw.githubusercontent.com/scha0241/FIT3179/main/VegaLite/3_choropleth_map_1/data/routes.csv",
        "format": {"type": "csv"}
      },
      "transform": [
        {
          "lookup": "Departing Port",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/scha0241/FIT3179/main/VegaLite/3_choropleth_map_1/data/filter.csv",
              "format": {"type": "csv"}
            },
            "key": "name",
            "fields": ["latitude_deg", "longitude_deg"]
          },
          "as": ["dep_lat", "dep_lon"]
        },
        {
          "lookup": "Arriving Port",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/scha0241/FIT3179/main/VegaLite/3_choropleth_map_1/data/filter.csv",
              "format": {"type": "csv"}
            },
            "key": "name",
            "fields": ["latitude_deg", "longitude_deg"]
          },
          "as": ["arr_lat", "arr_lon"]
        }
      ],
      "encoding": {
        "latitude": {"field": "dep_lat", "type": "quantitative"},
        "longitude": {"field": "dep_lon", "type": "quantitative"},
        "latitude2": {"field": "arr_lat", "type": "quantitative"},
        "longitude2": {"field": "arr_lon", "type": "quantitative"},
        "tooltip": [
          {"field": "Departing Port", "type": "nominal", "title": "From"},
          {"field": "Arriving Port", "type": "nominal", "title": "To"},
          {"field": "Airline", "type": "nominal", "title": "Airline"},
          {"field": "Sectors Flown", "type": "quantitative", "title": "Sectors Flown"}
        ]
      }
    },
    {
      "mark": "circle",
      "data": {
        "url": "https://raw.githubusercontent.com/scha0241/FIT3179/main/VegaLite/3_choropleth_map_1/data/filter.csv",
        "format": {"type": "csv"}
      },
      "encoding": {
        "longitude": {"field": "longitude_deg", "type": "quantitative"},
        "latitude": {"field": "latitude_deg", "type": "quantitative"},
        "size": {
          "field": "score",
          "type": "quantitative",
          "scale": {
            "type": "log",
            "domain": [1, 1027975],
            "range": [10, 200]
          },
          "legend": {"title": "Airport Score"}
        },
        "color": {"value": "blue"},
        "tooltip": [
          {"field": "name", "type": "nominal", "title": "Airport Name"},
          {"field": "municipality", "type": "nominal", "title": "City"}
        ]
      }
    }
  ]
}
