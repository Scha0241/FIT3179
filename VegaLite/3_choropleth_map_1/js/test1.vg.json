{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Australian Airports and Routes",
  "width": 800,
  "height": 500,
  "config": {
    "background": "#a6cee3" 
  },
  "data": {
    "url": "https://raw.githubusercontent.com/scha0241/FIT3179/main/VegaLite/3_choropleth_map_1/js/ne_50m_admin_1_states_provinces.topojson",
    "format": {"type": "topojson", "feature": "ne_50m_admin_1_states_provinces"}
  },
  "projection": {"type": "mercator"},
  "layer": [
    {
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"},
      "encoding": {
        "tooltip": {"field": "properties.name", "type": "nominal", "title": "State"}
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/scha0241/FIT3179/main/VegaLite/3_choropleth_map_1/data/filter.csv",
        "format": {"type": "csv"}
      },
      "transform": [
        {
          "filter": "datum.municipality && datum.municipality !== ''"
        }
      ],
      "mark": "circle",
      "encoding": {
        "longitude": {"field": "longitude_deg", "type": "quantitative"},
        "latitude": {"field": "latitude_deg", "type": "quantitative"},
        "size": {"field": "score", "type": "quantitative", "scale": {"range": [10, 100]}},
        "color": {"field": "municipality", "type": "nominal"},
        "tooltip": [
          {"field": "name", "type": "nominal", "title": "Airport Name"},
          {"field": "municipality", "type": "nominal", "title": "City"},
          {"field": "type", "type": "nominal", "title": "Type"},
          {"field": "iata_code", "type": "nominal", "title": "IATA Code"}
        ]
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/scha0241/FIT3179/main/VegaLite/3_choropleth_map_1/data/routes.csv",
        "format": {"type": "csv"}
      },
      "transform": [
        {
          "lookup": "City1",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/scha0241/FIT3179/main/VegaLite/3_choropleth_map_1/data/filter.csv",
              "format": {"type": "csv"}
            },
            "key": "municipality",
            "fields": ["longitude_deg", "latitude_deg"],
            "as": ["origin_lon", "origin_lat"]
          }
        },
        {
          "lookup": "City2",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/scha0241/FIT3179/main/VegaLite/3_choropleth_map_1/data/filter.csv",
              "format": {"type": "csv"}
            },
            "key": "municipality",
            "fields": ["longitude_deg", "latitude_deg"],
            "as": ["dest_lon", "dest_lat"]
          }
        },
        {
          "filter": "datum.origin_lon && datum.origin_lat && datum.dest_lon && datum.dest_lat"
        }
      ],
      "mark": {"type": "line", "stroke": "red", "strokeWidth": 1.5},
      "encoding": {
        "longitude": {"field": "origin_lon", "type": "quantitative"},
        "latitude": {"field": "origin_lat", "type": "quantitative"},
        "longitude2": {"field": "dest_lon"},
        "latitude2": {"field": "dest_lat"},
        "tooltip": [
          {"field": "City1", "type": "nominal", "title": "Origin"},
          {"field": "City2", "type": "nominal", "title": "Destination"},
          {"field": "Passenger_Trips", "type": "quantitative", "title": "Passengers"}
        ]
      }
    }
  ]
}
