{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "description": "Interactive map of Australian airport connections.",
  "width": 900,
  "height": 560,
  "padding": {"top": 25, "left": 0, "right": 0, "bottom": 0},
  "autosize": "none",

  "signals": [
    {
      "name": "scale", "value": 1200,
      "bind": {"input": "range", "min": 500, "max": 3000}
    },
    {
      "name": "translateX", "value": 450,
      "bind": {"input": "range", "min": -500, "max": 1200}
    },
    {
      "name": "translateY", "value": 260,
      "bind": {"input": "range", "min": -300, "max": 700}
    },
    {
      "name": "shape", "value": "line",
      "bind": {"input": "radio", "options": ["line", "curve"]}
    },
    {
      "name": "hover",
      "value": null,
      "on": [
        {"events": "@cell:pointerover", "update": "datum"},
        {"events": "@cell:pointerout", "update": "null"}
      ]
    },
    {
      "name": "title",
      "value": "Australian Airports",
      "update": "hover ? hover.name + ' (' + hover.ident + ')' : 'Australian Airports'"
    },
    {
      "name": "cell_stroke",
      "value": null,
      "on": [
        {"events": "dblclick", "update": "cell_stroke ? null : 'brown'"},
        {"events": "pointerdown!", "update": "cell_stroke"}
      ]
    }
  ],

  "data": [
    {
      "name": "australia",
      "url": "https://raw.githubusercontent.com/scha0241/FIT3179/main/VegaLite/3_choropleth_map_1/js/ne_50m_admin_1_states_provinces.topojson",
      "format": {"type": "topojson", "feature": "ne_50m_admin_1_states_provinces"},
      "transform": [
        {
          "type": "geopath",
          "projection": "projection"
        }
      ]
    },
    {
      "name": "airports",
      "url": "https://raw.githubusercontent.com/scha0241/FIT3179/main/VegaLite/3_choropleth_map_1/data/airports.csv",  
      "format": {"type": "csv"},
      "transform": [
        {
          "type": "geopoint",
          "projection": "projection",
          "fields": ["longitude_deg", "latitude_deg"]
        }
      ]
    },
    {
      "name": "routes",
      "url": "https://raw.githubusercontent.com/scha0241/FIT3179/main/VegaLite/3_choropleth_map_1/data/routes.csv", 
      "format": {"type": "csv"},
      "transform": [
        {
          "lookup": "City1",
          "from": {
            "data": "airports",
            "key": "City1",
            "fields": ["latitude_deg", "longitude_deg"]
          },
          "as": ["source_lat", "source_lon"]
        },
        {
          "lookup": "City2",
          "from": {
            "data": "airports",
            "key": "City2",
            "fields": ["latitude_deg", "longitude_deg"]
          },
          "as": ["target_lat", "target_lon"]
        }
      ]
    }
  ],

  "projections": [
    {
      "name": "projection",
      "type": "mercator",
      "scale": {"signal": "scale"},
      "translate": [{"signal": "translateX"}, {"signal": "translateY"}]
    }
  ],

  "marks": [
    {
      "type": "path",
      "from": {"data": "australia"},
      "encode": {
        "enter": {
          "fill": {"value": "#dedede"},
          "stroke": {"value": "white"}
        },
        "update": {
          "path": {"field": "path"}
        }
      }
    },
    {
      "type": "symbol",
      "from": {"data": "airports"},
      "encode": {
        "enter": {
          "size": {"value": 100},
          "fill": {"value": "steelblue"}
        },
        "update": {
          "x": {"field": "x"},
          "y": {"field": "y"}
        }
      }
    },
    {
      "type": "path",
      "from": {"data": "routes"},
      "encode": {
        "enter": {
          "x": {"field": "source_lon"},
          "y": {"field": "source_lat"},
          "x2": {"field": "target_lon"},
          "y2": {"field": "target_lat"},
          "stroke": {"value": "red"},
          "strokeOpacity": {"value": 0.35}
        }
      }
    },
    {
      "type": "text",
      "encode": {
        "enter": {
          "x": {"value": 895},
          "y": {"value": 0},
          "fill": {"value": "black"},
          "fontSize": {"value": 20},
          "align": {"value": "right"}
        },
        "update": {
          "text": {"signal": "title"}
        }
      }
    }
  ]
}
